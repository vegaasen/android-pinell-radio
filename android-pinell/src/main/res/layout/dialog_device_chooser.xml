<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:minWidth="300dp"
              android:background="#80000000"
              android:orientation="vertical"
              android:gravity="center"
        >
    <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/newTitleColor"
            android:paddingBottom="@dimen/elementSpacing"
            >
        <ImageView
                android:id="@+id/imgDialogChooser"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_cast_white"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgDialogChooser"
                android:layout_centerVertical="true"
                android:text="@string/dialogChooserTitle"
                android:textColor="@color/newTitleTextColor"
                />
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/defaultBackgroundColor"
                  android:orientation="horizontal">
        <TextView
                android:id="@+id/txtListClickRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/dialogChooserPressRefresh"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="@dimen/textSmallDefaultHeight"
                android:textColor="@color/textSmall"
                android:layout_marginTop="@dimen/textDefaultHeight"
                android:layout_marginBottom="@dimen/textDefaultHeight"
                />
        <TextView
                android:id="@+id/txtListClickRefreshInProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialogSearchingForDevices"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="@dimen/textSmallDefaultHeight"
                android:textColor="@color/textSmall"
                android:layout_marginTop="@dimen/textDefaultHeight"
                android:layout_marginBottom="@dimen/textDefaultHeight"
                android:visibility="gone"
                />
        <ListView
                android:id="@+id/listDevices"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:overScrollMode="never"
                android:smoothScrollbar="true"
                >
        </ListView>
    </LinearLayout>
</LinearLayout>