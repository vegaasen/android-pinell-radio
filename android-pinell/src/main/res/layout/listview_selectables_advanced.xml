<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/defaultElementColor">
    <!--
        Point of this is to show the following elements:
            - Radio stations
        @author vegaasen
        @since 26.7.2015
    -->
    <RelativeLayout
            android:id="@+id/selectableAdvancedItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/selectableMargin"
            android:layout_marginEnd="@dimen/selectableMargin"
            android:layout_marginTop="@dimen/selectableMarginTopBottom"
            android:layout_marginBottom="@dimen/selectableMarginTopBottom"
            android:background="@color/defaultBackgroundColor"
            >
        <LinearLayout
                android:id="@+id/selectableAdvancedItemContainer"
                android:layout_width="@dimen/selectableImageWidth"
                android:layout_height="match_parent"
                android:background="@color/listBoxSelectedColor"
                >
            <ImageView
                    android:id="@+id/selectableAdvancedItemImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
        </LinearLayout>
        <TextView
                android:id="@+id/selectableAdvancedItemTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/selectableAdvancedItemContainer"
                android:layout_marginStart="@dimen/selectableMargin"
                android:layout_centerInParent="true"
                android:text="@string/genericUndocumented"
                />
    </RelativeLayout>

</LinearLayout>