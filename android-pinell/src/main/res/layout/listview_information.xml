<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/defaultBackgroundColor"
        >
    <RelativeLayout
            android:id="@+id/listDeviceWrapper"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/defaultElementColor">
        <TextView
                android:id="@+id/lblDeviceInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="@string/deviceInformationKey"
                android:layout_marginStart="@dimen/listGenericTextSpacing"
                />
        <TextView
                android:id="@+id/txtDeviceInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:text="@string/deviceInformationValue"
                android:layout_marginEnd="@dimen/listGenericTextSpacing"
                />
    </RelativeLayout>
</LinearLayout>