<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:minWidth="300dp"
              android:background="#80000000"
              android:orientation="vertical"
              android:gravity="center"
        >
    <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/defaultElementColor"
            android:paddingBottom="@dimen/elementSpacing"
            >
        <ImageView
                android:id="@+id/imgDialogChooser"
                android:layout_width="@dimen/iconSizeWidth"
                android:layout_height="@dimen/iconSizeHeight"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_cast_black"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgDialogChooser"
                android:layout_centerVertical="true"
                android:text="@string/dialogChooserTitle"
                />
        <ImageButton
                android:id="@+id/btnDialogRefreshDevices"
                android:layout_width="@dimen/iconSizeWidth"
                android:layout_height="@dimen/iconSizeHeight"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_cached_black"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:hapticFeedbackEnabled="true"
                />
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="@color/defaultBackgroundColor">
        <ListView
                android:id="@+id/listDevices"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:overScrollMode="never"
                android:smoothScrollbar="true"
                >
        </ListView>
    </LinearLayout>
</LinearLayout>