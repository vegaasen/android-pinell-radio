<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:minWidth="300dp"
                                             android:orientation="vertical"
                                             android:id="@+id/componentSlidingSidebar"
        >
    <LinearLayout
            android:id="@+id/layoutSidebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <include layout="@layout/sidebar_original"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:minWidth="300dp"
            android:orientation="vertical">
        <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/newTitleColor"
                android:paddingBottom="@dimen/elementSpacing"
                >
            <RelativeLayout
                    android:id="@+id/lstCurrentApplicationDrawerContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:paddingStart="0dp"
                    android:paddingEnd="10dp"
                    >
                <ImageView
                        android:id="@+id/currentHamburgerTop"
                        android:layout_width="@dimen/hamburgerWidth"
                        android:layout_height="@dimen/hamburgerHeight"
                        android:background="@color/newHamburgerColor"
                        android:contentDescription="@string/genericUndocumented"
                        />
                <ImageView
                        android:id="@+id/currentHamburgerMid"
                        android:layout_width="@dimen/hamburgerWidth"
                        android:layout_height="@dimen/hamburgerHeight"
                        android:layout_marginTop="3dp"
                        android:layout_below="@id/currentHamburgerTop"
                        android:background="@color/newHamburgerColor"
                        android:contentDescription="@string/genericUndocumented"
                        />
                <ImageView
                        android:id="@+id/currentHamburgerLow"
                        android:layout_width="@dimen/hamburgerWidth"
                        android:layout_height="@dimen/hamburgerHeight"
                        android:layout_marginTop="3dp"
                        android:layout_below="@id/currentHamburgerMid"
                        android:background="@color/newHamburgerColor"
                        android:contentDescription="@string/genericUndocumented"
                        />
            </RelativeLayout>
            <ImageView
                    android:id="@+id/imgCurrentApplicationContext"
                    android:layout_width="@dimen/iconBarSizeWidth"
                    android:layout_height="@dimen/iconBarSizeHeight"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/lstCurrentApplicationDrawerContainer"
                    android:src="@drawable/ic_radio_white"
                    android:contentDescription="@string/genericUndocumented"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgCurrentApplicationContext"
                    android:layout_centerVertical="true"
                    android:paddingTop="1dp"
                    android:text="@string/defaultTitlebarCaption"
                    android:id="@+id/txtCurrentApplicationContext"
                    android:textColor="@color/newTitleTextColor"
                    />
            <ImageButton
                    android:id="@+id/btnCurrentApplicationSelectDevice"
                    android:layout_width="@dimen/iconBarSizeWidth"
                    android:layout_height="@dimen/iconBarSizeHeight"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_cast_white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:contentDescription="@string/txtReselectDevice"
                    />
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="fill_parent"
                      android:baselineAligned="false"
                      android:background="@color/newBackgroundColor"
                >
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/fragmentReplacer">
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.SlidingPaneLayout>
