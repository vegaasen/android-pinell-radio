<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--
         This will be referred whenever the selected Pinell device is either:
         - not a Pinell device
         - not available

         @author vegaasen
         @since 04.08.2015
     -->
    <ImageView
            android:id="@+id/imgPinellNADefault"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_cake_black"
            android:contentDescription="@string/genericUndocumented"
            />
    <TextView
            android:id="@+id/txtPinellNAConnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgPinellNADefault"
            android:layout_centerHorizontal="true"
            android:text="@string/pinellNotAvailMain"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPinellNAConnected"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/textSmallDefaultHeight"
            android:text="@string/pinellNotAvailReason"
            />
</RelativeLayout>