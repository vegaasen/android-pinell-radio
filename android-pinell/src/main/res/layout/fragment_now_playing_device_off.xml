<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/newBackgroundColor">
    <!--
         This will be referred whenever the selected Pinell device is either:
         - not a Pinell device
         - not available

         @author vegaasen
         @since 04.08.2015
     -->
    <ImageView
            android:id="@+id/imgPlayingNotPoweredOnLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_info_outline_black"
            android:contentDescription="@string/genericUnknown"
            />
    <TextView
            android:id="@+id/txtPlayingNotConnceted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgPlayingNotPoweredOnLogo"
            android:layout_centerHorizontal="true"
            android:text="@string/notPoweredOnTitle"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPlayingNotConnceted"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/textSmallDefaultHeight"
            android:textStyle="italic"
            android:text="@string/notPoweredOnCaption"
            />
</RelativeLayout>